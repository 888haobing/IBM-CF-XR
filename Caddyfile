:8080
root * /usr/local/bin
file_server browse
tls :8080
index index.html

header {
    X-Robots-Tag none
    X-Content-Type-Options nosniff
    X-Frame-Options DENY
    Referrer-Policy no-referrer-when-downgrade
}

reverse_proxy :8080 {
   transport http {
      tls_client_auth /usr/local/bin/cert.crt /usr/local/bin/cert.key
   }
}
